generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Property {
  id          String       @id @default(cuid())
  title       String
  description String
  price       Int
  address     String
  city        String
  state       String
  country     String
  postalCode  String
  lat         Float
  lng         Float
  beds        Int
  baths       Int
  sqft        Int?
  propertyType PropertyType
  //images      Image[]      // relation
  createdAt   DateTime     @default(now())
}

model Image {
  id         String   @id @default(cuid())
  url        String  
  propertyId String
}

enum PropertyType {
  HOUSE
  APARTMENT
  CONDO
  TOWNHOUSE
}

